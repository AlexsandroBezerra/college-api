// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Professor {
  id Int @default(autoincrement()) @id
  name String
  email String @unique
  password String
}

model Student {
  id Int @id
  name String
}

model Task {
  id Int @default(autoincrement()) @id
  title String
  reward Int @default(2)
}
